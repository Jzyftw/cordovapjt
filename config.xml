<?xml version='1.0' encoding='utf-8'?>
<widget id="iut2.lpmiaw.demonotessql" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DemoNotesSql</name>
    <description>
        Une application MVC en cordova+JQuery Mobile+Sqlite.
    </description>
    <author email="philippe.martin@iut2.univ-grenoble-alpes.fr" href="http://www-info.iut2.upmf-grenoble.fr/licence-pro-mi/">
        Philippe Martin
    </author>
    <content src="index.html" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/iut2info.png"/>
        <icon src="res/iut2info.png"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
